 


<h1>All Posts</h1>
<h2><%= link_to 'New Post', new_post_path %></h2><br>

<table>
  <tr>
    <th align='left'>PostID</th>
    <th align='left'>Title</th>
    <th align='left'>Description</th>
    <th colspan="3" align='left'>Tools</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.id, post_path(post) %></td>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>