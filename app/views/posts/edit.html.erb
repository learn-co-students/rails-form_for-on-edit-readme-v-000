<h3>Post Form</h3>

<%= form_tag post_path(@post), method: "edit" do %>
  <label>Post title:</label><br>
  <%= text_field_tag :title, @post.title, id: "post[title]" %><br>

  <label>Post Description</label><br>
  <%= text_area_tag :description, @post.description, id: "post[description]" %><br>
  
  <%= submit_tag "Update Post" %>
<% end %>